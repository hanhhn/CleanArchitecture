{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Error",
        "System": "Warning",
        "AIA.D365Integration": "Debug",
        "One": "Debug"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "Enrich": [
      "WithClientIp",
      "WithClientAgent",
      "Serilog.Enrichers.Sensitive",
      "Serilog.Enrichers.CorrelationId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:o}][{Level:u1}][{SourceContext:l}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/_.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": null,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:o}][{Level:u1}][{SourceContext:l}] {Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 10485760
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "CorsSettings": {
    "AllowOrigin": "*",
    "AllowMethod": "*",
    "AllowHeader": "*"
  },
  "DefaultConnectionString": "Server=localhost;Port=5432;Database=postgres;User Id=super;Password=dog$2023;",
  "AppSettings": {
    "UseSwagger": true
  }
}